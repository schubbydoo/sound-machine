[Unit]
Description=Sound Machine trigger daemon (Pico -> WAV -> LED)
After=network.target sound.target
Wants=sound.target

[Service]
Type=simple
User=soundconsole
Group=audio
WorkingDirectory=/home/soundconsole/sound-machine
Environment=SOUND_MACHINE_CONFIG=/home/soundconsole/sound-machine/config/mappings.json
ExecStart=/usr/bin/env python3 /home/soundconsole/sound-machine/daemon/soundtrigger.py
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
