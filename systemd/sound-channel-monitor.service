[Unit]
Description=Sound Machine Channel Monitor (Rotary Switch)
After=network.target sound.target
Wants=sound.target

[Service]
Type=simple
User=soundconsole
Group=gpio
WorkingDirectory=/home/soundconsole/sound-machine
ExecStart=/usr/bin/env python3 /home/soundconsole/sound-machine/daemon/channel_monitor.py
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target

